#!/usr/bin/env bash
#
# Summary: One line, short description of a command
#
# Usage: pyenv pip-upgrade [--optional-flag] <required-argument>
#
# More thorough help text wrapped at 70 characters that spans
# multiple lines until the end of the comment block.

# exit 
set -o errexit 
# set -o nounset
# set -o pipefail

usage () {
  pyenv-help --usage pip-upgrage >&2
  [ -z "$1" ] || exit "$1"
}

# enabling debugging if pyenv in debug mode
[ -n "$PYENV_DEBUG" ] && set -x

# Provide pyenv completions
if [ "$1" = "--complete" ]; then
  exec pyenv-versions --bare
fi

# Set default pyenv root
if [ -z "$PYENV_ROOT" ]; then
  PYENV_ROOT="${HOME}/.pyenv"
fi

echo "Done..."